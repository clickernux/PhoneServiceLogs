<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="serviceData"
            type="com.taureanx.phoneservicelogs.model.ServiceData" />
    </data>

    <TableRow
        android:id="@+id/customTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="@{serviceData.cusName}"
            tools:text="Htun Htun Naing" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="@{serviceData.phBrand.toString()}"
            tools:text="OPPO" />

        <TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="@{serviceData.phModel}"
            tools:text="A3S" />

        <TextView
            android:id="@+id/collected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            app:setFormattedDate="@{serviceData.collectedDate}"
            tools:text="12.2.2022" />

        <TextView
            android:id="@+id/repair_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="@{serviceData.case}"
            tools:text="ရေဝင်ပါဝါမလာ" />

        <TextView
            android:id="@+id/is_repaired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            app:setStatusText="@{serviceData.repaired}"
            tools:text="Yes" />

        <TextView
            android:id="@+id/is_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            app:setStatusText="@{serviceData.taken}"
            tools:text="NO" />

        <TextView
            android:id="@+id/taken_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            app:setFormattedDate="@{serviceData.takenDate}"
            tools:text="13.2.2022" />

        <TextView
            android:id="@+id/phoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="@{serviceData.contactPhone}"
            android:textIsSelectable="true"
            tools:text="13.2.2022" />

        <TextView
            android:id="@+id/money_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            tools:text="35000" />
    </TableRow>
</layout>